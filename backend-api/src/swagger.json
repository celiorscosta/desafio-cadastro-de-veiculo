{
    "openapi": "3.0.0",
    "info": {
        "title": "Cadastro de Veículo",
        "description": "Documentação da API",
        "version": "1.0.0"
    },
    "basePath": "/",
    "paths": {
        "/carros":{
            "get":{
                "description": "Retorna uma lista com os dados do cadastro de veículo.",
                "responses": {
                  "200": {          
                    "description": "Lista de veículos."
                  }
                }
            }
        },
        "/carros/{id}":{
            "get":{
                "description": "Retorna uma lista com os dados do cadastro de veículo.",
                "parameters": [{
                    "in": "path",
                    "name": "id",
                    "required": true,
                    "type": "integer",
                    "description": "Id do registro do veículo no banco de dados."
                }],
                "responses": {
                  "200": {          
                    "description": "Lista de veículos."
                  }
                }
            }
        },
        "/carros/novo":{
          "post":{
              "description": "Cadastra um novo veículo na base de dados.",   
              "requestBody": {
                "content": {
                  "application/json": {
                    "schema": {
                      "type": "object",
                      "properties": {
                        "placa": {
                            "type": "string"
                        },
                        "ano": {
                            "type": "number"
                        },
                        "modelo":{
                            "type": "string"
                        },
                        "ativo":{
                            "type": "boolean"
                        },
                        "marca": {
                            "type": "string"
                        }                        
                      }
                    }
                  }
                }
              },           
              "responses": {
                "200": {          
                  "description": "Cadastra um novo veículo."
                }
              }
          }
      }
    }
}